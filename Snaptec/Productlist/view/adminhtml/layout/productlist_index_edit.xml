<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
        <css src="Snaptec_Productlist::css/main.css"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Snaptec\Productlist\Block\Adminhtml\Productlist\Edit" name="productlist.edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Snaptec\Productlist\Block\Adminhtml\Productlist\Edit\Tabs" name="productlist_edit_tabs">
                <block class="Snaptec\Productlist\Block\Adminhtml\Productlist\Edit\Tab\Main" name="productlist_edit_tab_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">productlist_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
